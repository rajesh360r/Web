  <meta charset="UTF-8">
  <title>ChitChat</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <script src="https://unpkg.com/feather-icons"></script>

  <!-- Favicon -->
  <link rel="icon" href="https://img.icons8.com/emoji/48/robot-emoji.png" type="image/png">

  <style>
    .chat-scroll {
      scrollbar-width: thin;
      scrollbar-color: #9ca3af transparent;
    }
    .chat-scroll::-webkit-scrollbar {
      width: 6px;
    }
    .chat-scroll::-webkit-scrollbar-thumb {
      background: #9ca3af;
      border-radius: 6px;
    }
    .avatar {
      width: 40px;
      height: 40px;
      border-radius: 9999px;
      background: #eef2ff;
      display: flex;
      align-items: center;
      justify-content: center;
      overflow: hidden;
      flex-shrink: 0;
    }
    .avatar img {
      width: 100%;
      height: 100%;
      object-fit: cover;
    }
  </style>
  <script>
    tailwind.config = {
      darkMode: 'class'
    }
  </script>
</head>
<body class="bg-gray-100 dark:bg-gray-900 text-gray-900 dark:text-gray-100 min-h-screen flex flex-col transition-colors duration-300">

  <!-- Header -->
  <header class="flex justify-between items-center p-4 shadow-md bg-white dark:bg-gray-800 sticky top-0 z-50">
    <h1 class="text-2xl font-bold flex items-center gap-2">
      <img src="https://img.icons8.com/emoji/48/robot-emoji.png" alt="robot" class="w-8 h-8"> 
      ChitChat
    </h1>
    <button id="darkModeToggle" class="flex items-center gap-2 bg-gray-200 dark:bg-gray-700 px-3 py-1 rounded-lg hover:scale-105 transition">
      <i data-feather="moon"></i>
      <span class="hidden sm:inline">Dark Mode</span>
    </button>
  </header>

  <!-- Chat Area -->
  <main id="chatbox" class="flex-1 overflow-y-auto p-4 sm:p-6 space-y-4 chat-scroll">
    <div class="flex items-start gap-3">
      <div class="avatar">
        <img src="https://img.icons8.com/emoji/48/robot-emoji.png" alt="AI">
      </div>
      <div class="bg-indigo-100 dark:bg-indigo-700 p-3 rounded-2xl shadow max-w-xs sm:max-w-xl">
        üëã Hello! I‚Äôm <b>ChitChat</b>. Ask me anything.
      </div>
    </div>
  </main>

  <!-- Input -->
  <footer class="p-3 sm:p-4 bg-white dark:bg-gray-800 shadow-md flex gap-2 sm:gap-3 items-center">
    <input id="userInput" type="text" placeholder="Type your message..."
      class="flex-1 border border-gray-300 dark:border-gray-600 rounded-xl px-3 py-2 sm:px-4 sm:py-2 focus:ring focus:ring-indigo-400 dark:bg-gray-700 transition" />
    <button id="sendBtn" class="bg-indigo-500 hover:bg-indigo-600 text-white px-3 py-2 sm:px-4 sm:py-2 rounded-xl shadow transition">
      <i data-feather="send"></i>
    </button>
  </footer>

  <script>
    feather.replace();

    const darkModeToggle = document.getElementById("darkModeToggle");
    darkModeToggle.addEventListener("click", () => {
      document.documentElement.classList.toggle("dark");
    });

    const input = document.getElementById("userInput");
    const sendBtn = document.getElementById("sendBtn");
    const chatbox = document.getElementById("chatbox");

    async function sendMessage() {
      const text = input.value.trim();
      if (!text) return;

      // User bubble
      chatbox.innerHTML += `
        <div class="flex items-start gap-3 justify-end">
          <div class="bg-indigo-500 text-white p-3 rounded-2xl shadow max-w-xs sm:max-w-xl break-words">
            ${text}
          </div>
          <div class="w-10 h-10 rounded-full bg-indigo-300 flex items-center justify-center font-bold flex-shrink-0">You</div>
        </div>
      `;
      input.value = "";
      chatbox.scrollTop = chatbox.scrollHeight;

      // AI Typing bubble
      const typingId = "typing-" + Date.now();
      chatbox.innerHTML += `
        <div id="${typingId}" class="flex items-start gap-3">
          <div class="avatar">
            <img src="https://img.icons8.com/emoji/48/robot-emoji.png" alt="AI">
          </div>
          <div class="bg-indigo-100 dark:bg-indigo-700 p-3 rounded-2xl shadow max-w-xs sm:max-w-xl italic break-words">Typing...</div>
        </div>
      `;
      chatbox.scrollTop = chatbox.scrollHeight;

      // Fake AI response
      try {
        const replies = [
          "I'm always here to help! ü§ñ",
          "That‚Äôs interesting, tell me more!",
          "Can you explain it in another way?",
          "Wow, I didn‚Äôt think of that!",
          "I‚Äôm ChitChat, your AI buddy üöÄ"
        ];
        const data = { content: replies[Math.floor(Math.random() * replies.length)] };

        document.getElementById(typingId).outerHTML = `
          <div class="flex items-start gap-3">
            <div class="avatar">
              <img src="https://img.icons8.com/emoji/48/robot-emoji.png" alt="AI">
            </div>
            <div class="bg-indigo-100 dark:bg-indigo-700 p-3 rounded-2xl shadow max-w-xs sm:max-w-xl break-words">
              ${data.content}
            </div>
          </div>
        `;
      } catch (err) {
        document.getElementById(typingId).outerHTML = `
          <div class="flex items-start gap-3">
            <div class="w-10 h-10 rounded-full bg-red-500 flex items-center justify-center text-white font-bold">!</div>
            <div class="bg-red-100 dark:bg-red-700 p-3 rounded-2xl shadow max-w-xs sm:max-w-xl break-words">
              ‚ö†Ô∏è Error fetching reply.
            </div>
          </div>
        `;
      }
      chatbox.scrollTop = chatbox.scrollHeight;
    }

    // Send message on button click
    sendBtn.addEventListener("click", sendMessage);

    // Send message on Enter key
    input.addEventListener("keydown", (e) => {
      if (e.key === "Enter") {
        e.preventDefault();
        sendMessage();
      }
    });
  </script>
</body>
</html>
