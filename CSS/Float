<!--  CSS  -->

#ID1 {
    float: right;       /* Moves the image from left to right */
    border: 5px solid black;
}

.box {
    border: 2px solid black;
    height: 100px;
    width: 100px;
    font-size: 40px;
    text-align: center;
    background-color: tomato;
    float: left;
}

p {
    clear: both;  /* clear:both means it will not allow any element to float on both side of the paragraph */    /* We can also we clear:left or clear:right */

}
